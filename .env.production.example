# Production Environment Configuration
# This file is an example. DO NOT commit actual production values to Git.
# Set these as environment variables on your VPS instead.

# Active Profile
SPRING_PROFILES_ACTIVE=prod

# Gateway Configuration
GATEWAY_PORT=8080
GATEWAY_PUBLIC_PORT=80

# Service Ports (Internal)
AUTH_SERVICE_PORT=8081
GOONGMAP_SERVICE_PORT=8082
ORDER_SERVICE_PORT=8083

# Auth Database Configuration
AUTH_DB_NAME=auth_db_prod
AUTH_DB_USER=auth_user_prod
AUTH_DB_PASSWORD=STRONG_PASSWORD_HERE

# Goongmap Database Configuration
GOONGMAP_DB_NAME=goongmap_db_prod
GOONGMAP_DB_USER=goongmap_user_prod
GOONGMAP_DB_PASSWORD=STRONG_PASSWORD_HERE

# Order Database Configuration
ORDER_DB_NAME=order_db_prod
ORDER_DB_USER=order_user_prod
ORDER_DB_PASSWORD=STRONG_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=STRONG_SECRET_KEY_MINIMUM_256_BITS_CHANGE_THIS
JWT_ACCESS_EXP_MS=3600000
JWT_REFRESH_EXP_MS=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=Authorization
CORS_ALLOW_CREDENTIALS=true

# Goongmap API Key
GOONGMAP_API_KEY=YOUR_PRODUCTION_GOONGMAP_API_KEY

# For production, DO NOT use ENV_FILE
# All variables should be set directly in the VPS environment
