# Auth Service Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
SERVER_PORT=8081

# Database Configuration
# For Docker: use service name (auth-db)
# For local: use localhost
AUTH_DB_HOST=auth-db
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASS=auth_password_dev

# JWT Configuration
# IMPORTANT: Change this in production! Minimum 256 bits
JWT_SECRET=your-secret-key-change-this-in-production-minimum-256-bits
JWT_ACCESS_EXP_MS=3600000
JWT_REFRESH_EXP_MS=86400000

# Redis Configuration
# For Docker: use service name (redis)
# For local: use localhost
REDIS_HOST=redis
REDIS_PORT=6379
