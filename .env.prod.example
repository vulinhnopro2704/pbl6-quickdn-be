# Production Environment Variables for VPS Deployment
# Copy this file to .env and fill in the actual values

# Registry Configuration
REGISTRY_USERNAME=vulinhnopro2704

# Database Configuration - Auth Service
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=your_secure_password_here

# Database Configuration - Goongmap Service
GOONGMAP_DB_NAME=goongmap_db
GOONGMAP_DB_USER=goongmap_user
GOONGMAP_DB_PASSWORD=your_secure_password_here

# Database Configuration - Order Service
ORDER_DB_NAME=order_db
ORDER_DB_USER=order_user
ORDER_DB_PASSWORD=your_secure_password_here

# Database Configuration - Payment Service
PAYMENT_DB_NAME=payment_db
PAYMENT_DB_USER=payment_user
PAYMENT_DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_EXP_MS=3600000
JWT_REFRESH_EXP_MS=86400000

# API Keys
GOONGMAP_API_KEY=your_goongmap_api_key_here

# PayOS Configuration
PAYOS_CLIENT_ID=your_payos_client_id_here
PAYOS_API_KEY=your_payos_api_key_here
PAYOS_CHECKSUM_KEY=your_payos_checksum_key_here
PAYOS_PARTNER_CODE=
PAYOS_API_BASE_URL=https://api-merchant.payos.vn
PAYOS_RETURN_URL=https://yourdomain.com/payment/result
PAYOS_CANCEL_URL=https://yourdomain.com/payment/cancel
PAYOS_MOCK_ENABLED=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=Authorization
CORS_ALLOW_CREDENTIALS=true

# Spring Profile
SPRING_PROFILES_ACTIVE=prod
